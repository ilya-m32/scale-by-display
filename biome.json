{
  "linter": {
    "rules": {
      "complexity": {
        "useArrowFunction": "off",
        "noForEach": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    },
    "ignore": ["dist"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "formatter": {
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
